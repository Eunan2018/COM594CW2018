<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
    tools:context=".DisplayWeather"
    tools:layout_editor_absoluteY="73dp">


    <TextView
        android:id="@+id/textViewTemperature1"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:freezesText="true"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewDay1"
        app:layout_constraintEnd_toEndOf="@+id/imageViewDay1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewDay1" />

    <TextView
        android:id="@+id/textViewTemperature3"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="cursive"
        android:gravity="top|center"
        android:freezesText="true"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewTemperature2"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDay3"
        app:layout_constraintVertical_bias="0.0"
        tools:includeFontPadding="false"
        tools:text="9.35C" />

    <TextView
        android:id="@+id/textViewTemperature4"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:fontFamily="cursive"
        android:gravity="top|center"
        android:freezesText="true"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewDay4"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDay4"
        tools:includeFontPadding="false"
        tools:text="9.35C" />

    <TextView
        android:id="@+id/textViewTemperature5"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:fontFamily="cursive"
        android:gravity="top|center"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:freezesText="true"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewDay5"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDay5"
        tools:includeFontPadding="false"
        tools:text="9.35C" />


    <TextView
        android:id="@+id/textViewTemperature2"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:fontFamily="cursive"
        android:gravity="top|center"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:freezesText="true"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewDay2"
        app:layout_constraintStart_toStartOf="@+id/imageViewDay2"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDay2"
        tools:includeFontPadding="false"
        tools:text="9.35C" />

    <TextView
        android:id="@+id/textViewSpeed"
        android:layout_width="50dp"
        android:layout_height="34dp"
        android:layout_marginStart="33dp"
        android:fontFamily="cursive"
        android:freezesText="true"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHumidity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageWind"
        tools:text="12 mph/Wind speed" />


    <TextView
        android:id="@+id/textViewHumidity"
        android:layout_width="64dp"
        android:layout_height="23dp"
        android:layout_marginStart="15dp"
        android:fontFamily="cursive"
        android:freezesText="true"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageWind"
        app:layout_constraintTop_toBottomOf="@+id/imageHumidity"
        tools:text="47 %/ Humidity" />

    <TextView
        android:id="@+id/textViewPressure"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imagePressure"
        app:layout_constraintTop_toBottomOf="@+id/imagePressure"
        app:layout_constraintVertical_bias="0.0"
        tools:text="34"
        tools:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textViewCity"
        android:layout_width="162dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:fontFamily="cursive"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        android:freezesText="true"
        app:layout_constraintStart_toStartOf="@+id/editTextCity"
        app:layout_constraintTop_toBottomOf="@+id/editTextCity"
        tools:text="London" />

    <ImageView
        android:id="@+id/imageHumidity"
        android:layout_width="42dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:tint="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/textViewCity"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintStart_toEndOf="@+id/imageWind"
        app:layout_constraintTop_toBottomOf="@+id/textViewCity"
        app:srcCompat="@drawable/humidity" />

    <ImageView
        android:id="@+id/imagePressure"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="48dp"
        android:tint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewDay1"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate1"
        app:srcCompat="@drawable/bar" />

    <ImageView
        android:id="@+id/imageWind"
        android:layout_width="57dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/textViewCity"
        app:layout_constraintTop_toBottomOf="@+id/textViewCity"
        app:srcCompat="@drawable/wind" />

    <ImageView
        android:id="@+id/imageViewDay1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewCity"
        app:layout_constraintTop_toBottomOf="@+id/editTextCity"
        app:layout_constraintVertical_bias="0.006"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageViewDay2"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:gravity="center_horizontal|center"
        app:layout_constraintBottom_toTopOf="@+id/textViewTemperature2"
        app:layout_constraintEnd_toEndOf="@+id/textViewDate2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewDate2"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate2"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageViewDay3"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewDate3"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate3"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageViewDay4"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewTemperature4"
        app:layout_constraintEnd_toEndOf="@+id/textViewDate4"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate4"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageViewDay5"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewTemperature5"
        app:layout_constraintEnd_toEndOf="@+id/textViewDate5"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate5"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewDate1"
        android:layout_width="103dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:fontFamily="cursive"
        android:textAlignment="textEnd"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:freezesText="true"
        app:layout_constraintEnd_toEndOf="@+id/editTextCity"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewDay1"
        app:layout_constraintTop_toBottomOf="@+id/editTextCity"
        tools:text="12.09" />

    <TextView
        android:id="@+id/textViewDate2"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:fontFamily="cursive"
        android:gravity="bottom|center"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        android:textStyle="bold"
        android:freezesText="true"
        app:layout_constraintBottom_toTopOf="@+id/imageViewDay2"
        app:layout_constraintStart_toEndOf="@+id/textViewSpeed"
        app:layout_constraintTop_toBottomOf="@+id/textViewSpeed" />

    <TextView
        android:id="@+id/textViewDate3"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:fontFamily="cursive"
        android:gravity="bottom|center"
        android:textAlignment="center"
        android:freezesText="true"
        android:textColor="@android:color/background_light"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/textViewDate2"
        app:layout_constraintTop_toBottomOf="@+id/textViewSpeed" />

    <TextView
        android:id="@+id/textViewDate4"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:fontFamily="cursive"
        android:gravity="bottom|center"
        android:textAlignment="center"
        android:freezesText="true"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/textViewDate3"
        app:layout_constraintTop_toBottomOf="@+id/textViewSpeed" />

    <TextView
        android:id="@+id/textViewDate5"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:fontFamily="cursive"
        android:freezesText="true"
        android:gravity="bottom|center"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/textViewDate4"
        app:layout_constraintTop_toBottomOf="@+id/textViewSpeed" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/screen_background_light_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewSpeed"
        app:layout_constraintTop_toBottomOf="@+id/textViewSpeed"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="71dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:background="@android:drawable/screen_background_light_transparent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textViewSpeed" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="73dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:background="@android:drawable/screen_background_light_transparent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textViewSpeed" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="70dp"
        android:layout_height="92dp"
        android:layout_marginStart="28dp"
        android:background="@android:drawable/screen_background_light_transparent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textViewSpeed" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="67dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:fontFamily="cursive"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textViewPressure"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

    <EditText
        android:id="@+id/editTextCity"
        android:layout_width="526dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Enter a city"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>